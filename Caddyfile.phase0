# Production Caddyfile for WhatsApp Chatbot Platform
#
# This configuration supports automatic HTTPS via Let's Encrypt.
# Set DOMAIN environment variable to your domain name.
#
# Usage options:
#   1. Single domain with path-based routing (default)
#   2. Subdomains for each service (uncomment subdomain blocks)

# Global options
{
    # Email for Let's Encrypt notifications
    email {$ADMIN_EMAIL:admin@example.com}

    # Uncomment for staging certificates during testing
    # acme_ca https://acme-staging-v02.api.letsencrypt.org/directory
}

# =============================================================================
# HTTP-only server block for IP-based access (testing/development)
# This allows direct IP access without SSL issues
# =============================================================================
:80 {
    # Security headers (without HSTS since HTTP only)
    header {
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    # WhatsApp Webhook endpoint (strip /webhook prefix since server uses root)
    handle /webhook* {
        uri strip_prefix /webhook
        reverse_proxy webhook-ingress:3000
    }

    # Management API
    handle /api/* {
        uri strip_prefix /api
        reverse_proxy whatsapp_chatbot_api:4000
    }

    # NOTE: Windmill doesn't support subpath routing (/windmill) - frontend assets break.
    # For production, use subdomain routing: windmill.yourdomain.com (see OPTION 2 below)
    # For now, access Windmill directly at http://<server-ip>:8000

    # Health check endpoint
    handle /health {
        respond "OK" 200
    }

    # Default: Return 404
    handle {
        respond "Not Found" 404
    }

    log {
        output file /data/access-http.log {
            roll_size 10mb
            roll_keep 5
        }
        format json
    }
}

# =============================================================================
# HTTPS domain block - Only used when a real domain is configured
# (Comment out or remove the :80 block above for production with real domain)
# =============================================================================

{$DOMAIN:localhost} {
    # Security headers
    header {
        # Enable HSTS
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        # Prevent clickjacking
        X-Frame-Options "DENY"
        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"
        # XSS Protection
        X-XSS-Protection "1; mode=block"
        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
        # Remove server header
        -Server
    }

    # WhatsApp Webhook endpoint (strip /webhook prefix since server uses root)
    handle /webhook* {
        uri strip_prefix /webhook
        reverse_proxy webhook-ingress:3000
    }

    # Management API
    handle /api/* {
        uri strip_prefix /api
        reverse_proxy whatsapp_chatbot_api:4000
    }

    # NOTE: Windmill doesn't support subpath routing (/windmill) - frontend assets break.
    # For production, use subdomain routing: windmill.yourdomain.com (see OPTION 2 below)
    # For now, access Windmill directly at http://<server-ip>:8000

    # Health check endpoint
    handle /health {
        respond "OK" 200
    }

    # Default: Return 404 for unknown paths
    handle {
        respond "Not Found" 404
    }

    # Access logging
    log {
        output file /data/access.log {
            roll_size 10mb
            roll_keep 5
        }
        format json
    }
}

